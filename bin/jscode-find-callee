#!/usr/bin/env node

const fs = require('fs');
const argv = require('optimist').argv;
const find = require('../index.js');

function usage() {
  console.log('Usage: [flag] <path>\n');
  console.log('Flags:');
  console.log('  --name     The name of the callee. default: console\n');
  console.log('Example:');
  console.log('  $ jscode-find-callee --name myCall source.js');
}

if (process.argv.length === 2) {
  usage()
  process.exit(1)
}

let name = 'console'
if (argv.name) {
  name = argv.name
}

let input = ''
if (argv._.length === 0) {
  input = '.'
} else {
  input = argv._[0]
}
console.log('==> Input path:', input);
fs.readFile(input, function(err, data) {
  if (err) {
    console.log('Error:', err.message);
    process.exit(1)
  }
  find(data.toString('utf8'), name);
})
